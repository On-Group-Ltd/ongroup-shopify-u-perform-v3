{%- assign section_size = product.metafields.magazine.show_section | where: 'true' | size -%}

{%-  if section_size > 0 -%}
{{ 'product-magazine-feature.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.50 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.50 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{{  }}

<div class="section-{{ section.id }}-padding">
  <div class="page-width">

    {%- for title in  product.metafields.magazine.heading -%}
      {%-  liquid 
        assign show_section = product.metafields.magazine.show_section[forloop.index0]
        assign content = product.metafields.magazine.text[forloop.index0]

        assign logo =  product.metafields.magazine.logo[0][forloop.index0]
        assign logo_width = logo.width | at_most: 320
        assign logo_placement = product.metafields.magazine.logo_placement[forloop.index0]

        assign link = product.metafields.magazine.link[forloop.index0]
      -%}

      {%- if show_section -%}
        <div class="product-magazine-feature {% if logo != blank %}logo--{{ logo_placement }}{% endif %}">
          <div class="product-magazine-feature__text-content">
            <h2 class="h2 section-title title-wrapper--no-top-margin">
                {{ title }}
            </h2>
            {%- if content != blank -%}
              <div class="rte rte--large">
                {{  content }}
              </div>
            {%- endif -%}
          </div>
          {%-  if logo != blank -%}
            <div class="product-magazine-feature__logo-content">
              {%- if link != blank -%}
                <a href="{{ link }}" target="_blank">
              {%- endif -%}
              
                <img srcset=" {% if logo.width >= 285 %}{{ logo.cloudinary_src | append:'w_285' }} 285w,{% endif %}
                  {% if logo.width >= 360 %}{{ logo.cloudinary_src | append:'w_360' }} 360w,{% endif %}
                  {{ logo.cloudinary_src }} {{ logo_width }}w"
                src="{{ logo.cloudinary_src | append:'w_' | append: logo_width }}"
                loading="lazy"
                sizes="auto"
                width="{{ logo_width }}"
                height="{{ logo_width | divided_by: logo.aspect_ratio | ceil }}"
                alt="{{ logo.alt | escape }}">

              {%- if link != blank -%}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      {%-  endif -%}
    {%- endfor -%}
  </div>
</div>
{%- endif -%}

{% schema %}
{
  "name": "Magazine feature",
  "tag": "section",
  "class": "section section--magazine-feature",
  "settings": [
    {
      "type": "paragraph",
      "content": "Content is added via product custom fields"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Magazine feature"
    }
  ]
}
{% endschema %}