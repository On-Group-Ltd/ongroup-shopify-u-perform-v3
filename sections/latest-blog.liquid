{{ 'section-latest-blog.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .latest-blog__title {
    font-family: "georgiapro",sans-serif;
    font-style: 7.2rem;
    line-height: 1.2;
    font-weight: 400;
  }

  .latest-blog__subtitle {
    color: {{ section.settings.subtitle_color }};
  }

  .latest-blog__article-title {
    color: {{ section.settings.article_title_color }};
  }

  .latest-blog__article-excerpt {
    color: {{ section.settings.excerpt_color }};
  }
{%- endstyle -%}

<div class="latest-blog section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank or section.settings.subtitle != blank -%}
      <div class="latest-blog__header">
        {%- if section.settings.heading != blank -%}
          <h2 class="latest-blog__title {{ section.settings.heading_size }}">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="latest-blog__subtitle">
            {{ section.settings.subtitle }}
          </p>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.settings.blog != blank -%}
      {%- assign blog = blogs[section.settings.blog] -%}
      {%- if blog.articles_count > 0 -%}
        <div class="latest-blog__grid">
          {%- for article in blog.articles limit: 3 -%}
            

            <article class="latest-blog__article">
              <h3 class="latest-blog__article-title">
                <a href="{{ article.url }}">
                  {{ article.title | truncate: 50 }}
                </a>
              </h3>
              {%- if section.settings.show_image -%}
                <a href="{{ article.url }}" class="latest-blog__image-wrapper">
                  {%- if article.image -%}
                    <img
                      src="{{ article.image | image_url: width: 600 }}"
                      alt="{{ article.image.alt | escape }}"
                      loading="lazy"
                      width="{{ article.image.width }}"
                      height="{{ article.image.height }}"
                      class="latest-blog__image"
                    >
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'latest-blog__placeholder' }}
                  {%- endif -%}
                </a>
              {%- endif -%}

              <div class="latest-blog__content">

                {%- if section.settings.show_date -%}
                  <time class="latest-blog__date" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                    {{ article.published_at | date: section.settings.date_format }}
                  </time>
                {%- endif -%}

                {%- if section.settings.show_author -%}
                  <span class="latest-blog__author">
                    {{ 'blogs.article.by_author' | t: author: article.author }}
                  </span>
                {%- endif -%}

                {%- if section.settings.show_excerpt -%}
                  <p class="latest-blog__article-excerpt">
                    {%- if article.excerpt.size > 0 -%}
                      {{ article.excerpt | strip_html | truncate: 150 }}
                    {%- else -%}
                      {{ article.content | strip_html | truncate: 150 }}
                    {%- endif -%}
                  </p>
                {%- endif -%}

                {%- if section.settings.show_read_more -%}
                  <a href="{{ article.url }}" class="latest-blog__read-more">
                    {{ section.settings.read_more_text }}
                  </a>
                {%- endif -%}
              </div>
            </article>
          {%- endfor -%}
        </div>

        {%- if section.settings.show_view_all -%}
          <div class="latest-blog__view-all">
            <a href="{{ blog.url }}" class="button button--secondary">
              {{ section.settings.view_all_text }}
            </a>
          </div>
        {%- endif -%}
      {%- else -%}
        <p class="latest-blog__no-articles">{{ 'blogs.article.no_articles' | t }}</p>
      {%- endif -%}
    {%- else -%}
      <p class="latest-blog__no-blog">{{ 'sections.latest_blog.select_blog' | t: default: 'Please select a blog in the section settings.' }}</p>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Latest Blog Posts",
  "tag": "section",
  "class": "section-latest-blog",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "U Perform Blog."
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        {
          "value": "h3",
          "label": "Small"
        },
        {
          "value": "h2",
          "label": "Medium"
        },
        {
          "value": "h1",
          "label": "Large"
        }
      ],
      "default": "h2"
    },
    {
      "type": "font_picker",
      "id": "heading_font",
      "label": "Heading font",
      "default": "playfair_display_n4"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#1a1a1a"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Recovery, Nutrition & Fitness Advice from Athletes"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle color",
      "default": "#b8956b"
    },
    {
      "type": "header",
      "content": "Article Card"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "label": "Show featured image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show date",
      "default": false
    },
    {
      "type": "text",
      "id": "date_format",
      "label": "Date format",
      "default": "%B %d, %Y",
      "info": "Example: %B %d, %Y = January 01, 2024"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show author",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show excerpt",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_read_more",
      "label": "Show read more link",
      "default": false
    },
    {
      "type": "text",
      "id": "read_more_text",
      "label": "Read more text",
      "default": "Read more"
    },
    {
      "type": "color",
      "id": "article_title_color",
      "label": "Article title color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "excerpt_color",
      "label": "Excerpt color",
      "default": "#666666"
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all button",
      "default": false
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all text",
      "default": "View all articles"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Latest Blog Posts"
    }
  ]
}
{% endschema %}
